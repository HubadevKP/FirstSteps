def a(x, y):
    return x + y
b = 0


while b < 1:
    print('Hello! Is KPadder3000')
    print()
    print('You can add two numbers:')
    c = float(input('First Number: '))
    d = float(input('Secend Number: '))
    print('Result is: ', str(a(c, d)))
    for i in range(3):
        print('.')
        b += 1
    print()
    print('KPadder3000')



